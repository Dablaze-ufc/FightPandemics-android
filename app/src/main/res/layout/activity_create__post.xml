<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Create_Post.Create_Post">
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/clear"
        android:contentDescription="@string/desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:textColor="#282828"
        android:lineSpacingExtra="6sp"
        android:text="@string/create_a_post"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"

        />

</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#282828"
        android:lineSpacingExtra="4sp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/worksans_regular"
        android:text="@string/are_you_offering_or_requesting_help"
        />

   <LinearLayout
       android:layout_marginTop="12dp"
       android:layout_width="123dp"
       android:layout_height="30dp"
       android:background="@drawable/dropdown_createpost_offering_or_requesting"
       android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:textColor="#425af2"
           android:lineSpacingExtra="3sp"
           android:layout_marginStart="15dp"
           android:layout_marginTop="7dp"
           android:layout_marginBottom="7dp"
           android:text="@string/i_am_offering"
           android:fontFamily="@font/worksans_regular"
           />
       <ImageView
           android:layout_marginBottom="10dp"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="8dp"
           android:layout_marginTop="10dp"
           android:layout_width="14dp"
           android:layout_height="14dp"
           android:src="@drawable/dropdown_arrow"
           android:contentDescription="@string/desc" />

   </LinearLayout>

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginRight="-20dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/fp_line"
        android:contentDescription="@string/desc" />

    <EditText
        android:layout_width="wrap_content"
        android:hint="@string/title"
        android:textSize="22.3sp"
        android:textColor="#939393"
        android:lineSpacingExtra="5.1sp"
        android:textColorHint="#939393"
        android:background="#00000000"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"/>

    <EditText
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:hint="@string/description_of_your_post"
        android:textSize="22.3sp"
        android:textColor="#939393"
        android:lineSpacingExtra="5.6sp"
        android:gravity="top"
        android:textColorHint="#939393"
        android:background="#00000000"
        android:fontFamily="@font/worksans_regular"
        android:layout_height="120dp"/>

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginRight="-20dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:src="@drawable/fp_line"
        android:contentDescription="@string/desc" />

    <TextView
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#222222"
        android:lineSpacingExtra="4sp"
        android:text="@string/who_can_see_this_post_and_for_how_long"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="155dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/dropdown_createpost_offering_or_requesting"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#425af2"
                android:lineSpacingExtra="3sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"

                android:text="@string/share_with_anyone"
                android:fontFamily="@font/worksans_regular"
                />
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/dropdown_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="143dp"
            android:layout_height="30dp"
            android:background="@drawable/dropdown_createpost_offering_or_requesting"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#425af2"
                android:lineSpacingExtra="3sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:text="@string/duration_of_post"
                android:fontFamily="@font/worksans_regular"
                />
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/dropdown_arrow"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#222222"
        android:lineSpacingExtra="4sp"
        android:lineHeight="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:text="@string/add_tags_to_help_boost_your_visibility"
        />

    <ImageView

        android:contentDescription="@string/desc"
        android:layout_marginTop="16dp"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:src="@drawable/fp_tag_icon"/>

    <Button
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/button_confirm_blue_background"
        android:enabled="false"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="7.2sp"
        android:alpha="0.3"
        tools:text="Post"
        />

    </LinearLayout>
</LinearLayout>